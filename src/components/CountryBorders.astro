---
const { country } = Astro.props;
---

<div class="font-semibold flex gap-3 items-center flex-wrap">
  <p class="w-full lg:w-auto">Border Countries:</p>

  {
    country.borders
      ? country.borders.map((border) => {
          return (
            <span class="inline-block min-w-24 py-2 px-8 rounded-sm font-light text-sm dark:bg-darkBlue-500">
              {border}
            </span>
          );
        })
      : "No Border Countries"
  }
</div>

<style>
  span {
    box-shadow: 0px 0px 4px 1px rgba(0, 0, 0, 0.1);
  }
</style>
